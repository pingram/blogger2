<h1> All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
		<%= link_to tag.name, tag_path(tag),
			class: 'tag_title', id: "tag_#{tag.id}" %>
    </li>
    <li>
    	<%= link_to "delete", tag_path(@tag), method: :delete,
	data: {confirm: "Really delete the tag?"} %>
    </li>
  <% end %>

<!-- 	<%= link_to "Create a New Tag", new_tag_path, class: "new_tag" %> -->
</ul>
